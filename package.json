{
  "name": "samp-launcher",
  "author": "Randell Hart",
  "license": "MIT",
  "version": "1.0.0",
  "description": "Unofficial SA:MP launcher",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm-run-all clear:dist compile:dev",
    "build": "npm-run-all clear:dist compile:prod",
    "electron:build": "electron-builder -c electron-builder.json",
    "app:build": "npm-run-all build clear:build electron:build",
    "clear:dist": "rimraf dist/*",
    "clear:build": "rimraf build/*",
    "compile:dev": "cross-env NODE_ENV=development webpack-dev-server --config webpack/dev.config",
    "compile:prod": "cross-env NODE_ENV=production webpack --config webpack/prod.config",
    "typeorm:cli": "ts-node node_modules/typeorm/cli.js -f packages/main/ormconfig.ts",
    "migration:generate": "npm run typeorm:cli -- migration:generate",
    "migration:run": "npm run typeorm:cli -- migration:run",
    "migration:revert": "npm run typeorm:cli -- migration:revert",
    "database:drop": "npm run typeorm:cli -- schema:drop",
    "tmp:g": "node scripts/tmp-generator",
    "lint": "eslint . --ext .ts",
    "electron:rebuild": "electron-rebuild -f -v 8.2.5 -a ia32",
    "postinstall": "npm-run-all electron:rebuild"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.10",
    "@types/jest": "^25.2.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "autoprefixer": "^9.7.6",
    "cross-env": "^7.0.2",
    "css-loader": "^3.5.3",
    "cssnano": "^4.1.10",
    "dts-css-modules-loader": "^1.0.3",
    "electron": "^22.3.25",
    "electron-auto-reload-webpack-plugin": "^1.0.0",
    "electron-builder": "^22.6.0",
    "electron-rebuild": "^1.10.1",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "eslint-plugin-standard": "^4.0.1",
    "fork-ts-checker-webpack-plugin": "^4.1.3",
    "html-webpack-plugin": "^4.3.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.0",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^3.0.0",
    "react-svg-loader": "^3.0.3",
    "rimraf": "^3.0.2",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "terser-webpack-plugin": "^3.0.0",
    "ts-loader": "^7.0.2",
    "ts-node": "^8.10.1",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.8.3",
    "url-loader": "^4.1.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "iconv-lite": "^0.5.1",
    "mobx": "^5.15.4",
    "mobx-react": "^6.2.2",
    "moment": "^2.25.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "sqlite3": "^4.2.0",
    "typeorm": "^0.2.24",
    "uid": "^1.0.0",
    "windows-process-manager": "^1.0.0"
  }
}
